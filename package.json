{
  "name": "archeongui",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "rebuild": "electron-rebuild -f -w node-pty"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "axios": "^1.13.2",
    "monaco-editor": "^0.55.1",
    "pinia": "^3.0.4",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.23",
    "chokidar": "^4.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "node-pty": "^1.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.archeon.gui",
    "productName": "ArcheonGUI",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSAppleEventsUsageDescription": "ArcheonGUI needs to access system events",
        "NSSystemAdministrationUsageDescription": "ArcheonGUI needs to run shell commands"
      }
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development",
      "maintainer": "Archeon <info@archeon.dev>",
      "vendor": "Archeon"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "rules_templates",
        "to": "rules_templates",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "release"
    },
    "afterPack": "./scripts/afterPack.cjs",
    "asarUnpack": [
      "node_modules/node-pty/**/*"
    ]
  }
}
