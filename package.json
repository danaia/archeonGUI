{
  "name": "archeongui",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder --linux --dir",
    "build:dmg": "vite build && electron-builder --arm64 --mac dmg",
    "preview": "vite preview",
    "postinstall": "rm -rf node_modules/@vue/devtools-kit node_modules/@vue/devtools-api || true"
  },
  "dependencies": {
    "@xterm/addon-fit": "*",
    "@xterm/xterm": "*",
    "axios": "^1.13.2",
    "chokidar": "^4.0.3",
    "monaco-editor": "^0.55.1",
    "node-pty": "^1.0.0",
    "pinia": "^3.0.4",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@rollup/rollup-darwin-arm64": "^4.54.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.23",
    "dmg-license": "^1.0.11",
    "electron": "^33.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^5.4.11",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "overrides": {
    "@vue/devtools-api": "file:./stubs/@vue/devtools-api"
  },
  "build": {
    "appId": "com.archeon.gui",
    "productName": "ArcheonGUI",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": {
        "target": "dir",
        "arch": "arm64"
      },
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "type": "development",
      "identity": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "maintainer": "Archeon <info@archeon.dev>",
      "vendor": "Archeon"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "rules_templates",
        "to": "rules_templates"
      }
    ],
    "directories": {
      "output": "release"
    },
    "asarUnpack": [
      "node_modules/node-pty/**/*"
    ],
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "buildDependenciesFromSource": false
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.53.3",
    "@rollup/rollup-darwin-x64": "^4.53.3",
    "@rollup/rollup-linux-x64-gnu": "^4.53.3",
    "@rollup/rollup-linux-x64-musl": "^4.53.3"
  }
}
